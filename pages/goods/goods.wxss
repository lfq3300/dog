page {
    background-color: #f4f4f4;
}

image {
    display: block;
}

.head {
    width: 100%;
    position: relative;
    background-color: #fff;
}

.head swiper {
    width: 100%;
    height: 750rpx;
}

.head swiper image {
    width: 100%;
    height: 100%;
}

.head .head-info {
    padding: 40rpx 30rpx;
}

.head .head-info .info-title {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
    line-height: 40rpx;
    padding-bottom: 10rpx;
}

.head .head-info .info-describe {
    font-size: 26rpx;
    color: #999;
    line-height: 35rpx;
    padding-bottom: 10rpx;
}

.head .head-info .info-money {
    font-size: 46rpx;
    color: #f41c24;
    font-weight: 500;
}

.head .head-timer {
    width: 100%;
    padding: 35rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
    color: #fff;
    background-color: #f41c24;
}

.head .head-timer .title {
    width: 100%;
    font-size: 46rpx;
}

.head .head-timer .title text {
    font-size: 26rpx;
    text-decoration: line-through;
}

.head .head-timer .time {
    text-align: right;
    width: 100%;
    padding-top: 15rpx;
}

.head .head-timer .time text {
    background-color: #fff;
    color: #f41c24;
    font-size: 26rpx;
    border-radius: 6rpx;
    padding: 0rpx 8rpx;
}

.comment {
    width: 100%;
    position: relative;
    background-color: #fff;
    margin-top: 20rpx;
}

.comment navigator {
    padding: 0 30rpx;
}

.comment text {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #333;
}

.comment .icon {
    height: 8px;
    width: 8px;
    border-width: 3px 3px 0 0;
    border-color: #c7c7cc;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    right: 30rpx;
    top: 35rpx;
}

.promotion {
    width: 100%;
    position: relative;
    background-color: #fff;
    margin-top: 20rpx;
}

.promotion .icon {
    height: 8px;
    width: 8px;
    border-width: 3px 3px 0 0;
    border-color: #c7c7cc;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    right: 30rpx;
    top: 35rpx;
}

.promotion .icon-rate90 {
    top: 30rpx;
    transform: rotateZ(135deg);
}

.promotion .name {
    font-size: 28rpx;
    color: #999;
    padding-right: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    width: 70rpx;
}

.promotion .item {
    width: 580rpx;
    text-align: left;
}

.promotion .item text {
    height: 38rpx;
    line-height: 38rpx;
    font-size: 20rpx;
    padding: 0 20rpx;
    float: left;
    border-radius: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.promotion .coupon {
    padding: 25rpx 30rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid #e8e8e8;
    display: flex;
    flex-direction: row;
    position: relative;
    overflow: hidden;
}

.promotion .coupon .item text {
    color: #f41c24;
    border: 1rpx solid #f41c24;
}

.promotion .discount {
    padding: 25rpx 30rpx;
    padding-bottom: 15rpx;
    display: flex;
    flex-direction: row;
    position: relative;
    overflow: hidden;
}

.promotion .discount .item text {
    color: #fff;
    background-color: #f41c24;
    border: 1rpx solid #f41c24;
}

.promotion .discount-describe {
    border-top: 1rpx solid #e8e8e8;
    padding: 25rpx 30rpx;
    padding-bottom: 15rpx;
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    color: #999;
}

.promotion .discount-describe .item>view {
    width: 100%;
    height: 50rpx;
    line-height: 40rpx;
}

.promotion .discount-describe .item text {
    color: #fff;
    background-color: #f41c24;
    border: 1rpx solid #f41c24;
    margin-right: 20rpx;
    margin-bottom: 0rpx;
}

.quantity {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: row;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
}

.quantity .name {
    font-size: 28rpx;
    color: #999;
    padding-right: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    width: 70rpx;
}

.quantity .item {
    height: 50rpx;
    text-align: left;
    border: 1px solid #d8d8d8;
    border-radius: 10rpx;
}

.quantity .item>view {
    float: left;
}

.quantity .item>view.item-jian {
    width: 60rpx;
    height: 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-right: 1px solid #d8d8d8;
}

.quantity .item>view.item-jian .icon1 {
    width: 25rpx;
    height: 5rpx;
    background-color: #666;
    display: table;
}

.quantity .item .item-input {
    width: 80rpx;
}

.quantity .item .item-input input {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #333;
}

.quantity .item>view.item-jia {
    width: 60rpx;
    height: 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    border-left: 1px solid #d8d8d8;
}

.quantity .item>view.item-jia .icon1 {
    width: 25rpx;
    height: 5rpx;
    background-color: #666;
    display: table;
}

.quantity .item>view.item-jia .icon2 {
    width: 5rpx;
    height: 25rpx;
    background-color: #666;
    display: table;
    position: absolute;
    top: 15rpx;
}

.goods-details {
    width: 100%;
    margin-top: 20rpx;
    padding-bottom: 100rpx;
    overflow: hidden;
    position: relative;
}

.goods-details .details-nav {
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color: #fff;
}

.goods-details .details-nav view {
    width: 100%;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #d8d8d8;
    color: #333;
    font-size: 28rpx;
}

.goods-details .details-nav view.tab-cur {
    color: #f41c24;
}

.goods-details .details {
    width: 100%;
    background-color: #fff;
}

.goods-details .details image {
    width: 100%;
}

.goods-details .parameter {
    width: 100%;
    background-color: #fff;
}

.goods-details .parameter .parm-item {
    padding: 40rpx 30rpx;
    border-bottom: 1px solid #d8d8d8;
}

.goods-details .parameter .parm-item .item-title {
    font-size: 24rpx;
    font-weight: bold;
    color: #666;
    margin-bottom: 20rpx;
}

.goods-details .parameter .parm-item .item-body {
    width: 100%;
}

.goods-details .parameter .parm-item .item-body .item {
    font-size: 24rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    line-height: 45rpx;
}

.goods-details .parameter .parm-item .item-body .item .name {
    color: #999;
    width: 220rpx;
}

.goods-details .parameter .parm-item .item-body .item .value {
    color: #666;
    width: 470rpx;
}

.goods-footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    display: flex;
    flex-direction: row;
    z-index: 5;
    border-top: 1px solid #d8d8d8;
}

.goods-footer .service {
    width: 100rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-right: 1px solid #d8d8d8;
}

.goods-footer .service button {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    opacity: 0;
}

.goods-footer .service image {
    height: 36rpx;
    width: 100%;
}

.goods-footer .service text {
    display: block;
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    color: #666;
    padding-top: 5rpx;
}

.goods-footer .service text.color_red {
    color: #f41c24;
}

.goods-footer .cart {
    width: 100rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.goods-footer .cart image {
    height: 36rpx;
    width: 100%;
}

.goods-footer .cart text {
    display: block;
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    color: #666;
    padding-top: 5rpx;
}

.goods-footer .cart-add {
    text-align: center;
    width: 275rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    background-color: #fd9443;
    font-size: 32rpx;
}

.goods-footer .shopping {
    text-align: center;
    width: 275rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    background-color: #f41c24;
    font-size: 32rpx;
    border-radius: 0rpx;
}

.goods-footer .no-stock {
    text-align: center;
    width: 550rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #999;
    background-color: #d8d8d8;
    font-size: 32rpx;
}

.fixed-coupon {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.fixed-coupon .coupon-bg {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}

.fixed-coupon .coupon-body {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: -580rpx;
    background-color: #fff;
}

.fixed-coupon .coupon-body .coupon-title {
    font-size: 32rpx;
    color: #333;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-bottom: 1px solid #d8d8d8;
    position: relative;
}

.fixed-coupon .coupon-body .coupon-title icon {
    position: absolute;
    right: 30rpx;
    top: 25rpx;
}

.fixed-coupon .coupon-body .coupon-item {
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    height: 490rpx;
}

.fixed-coupon .coupon-body .coupon-item .no-data {
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 20rpx;
    color: #999;
}

.fixed-coupon .coupon-body .coupon-item .item {
    width: 100%;
    height: 200rpx;
    border: 1rpx solid #f41c24;
    border-radius: 10rpx;
    color: #f41c24;
    position: relative;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-money {
    margin-left: 20rpx;
    margin-top: 25rpx;
    float: left;
    width: 255rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-money .money-code {
    font-size: 50rpx;
    font-weight: 500;
}

.fixed-coupon .coupon-body .coupon-item .item .item-money .money-amount {
    font-size: 116rpx;
    font-weight: 500;
}

.fixed-coupon .coupon-body .coupon-item .item .item-tips {
    height: 100%;
    float: left;
    margin-left: 15rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-tips .tips-t {
    font-size: 36rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 60rpx;
    margin-bottom: 10rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-tips .tips-tt {
    font-size: 36rpx;
    margin-top: 45rpx;
    margin-bottom: 0rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-tips .tips-tt text {
    display: block;
    font-size: 26rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-tips .tips-c {
    border: 1px solid #f41c24;
    font-size: 18rpx;
    padding: 0rpx 15rpx;
    line-height: 24rpx;
    display: table;
}

.fixed-coupon .coupon-body .coupon-item .item .item-btn {
    position: absolute;
    right: 25rpx;
    top: 35rpx;
    border-left: 1px #f41c24 dashed;
    padding-left: 25rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-btn .btn {
    width: 100rpx;
    height: 100rpx;
    background-color: #f41c24;
    border-radius: 50rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 32rpx;
    text-align: center;
    margin: auto;
    padding-right: 14rpx;
    box-sizing: border-box;
    position: relative;
}

.fixed-coupon .coupon-body .coupon-item .item .item-btn .btn .btn-icon {
    height: 8px;
    width: 8px;
    border-width: 2px 2px 0 0;
    border-color: #fff;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    right: 12rpx;
}

.fixed-coupon .coupon-body .coupon-item .item .item-btn>text {
    font-size: 18rpx;
    display: block;
    margin-top: 15rpx;
}