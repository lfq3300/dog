page {
    background-color: #f4f4f4;
    height: 100%;
}

image {
    display: block;
}

.container {
    height: 100%;
}

.cat-cls {
    width: 160rpx;
    height: 100%;
    background-color: #f4f4f4;
    border-right: 1px solid #ddd;
    min-height: 100%;
    float: left;
    box-sizing: border-box;
}

.cat-cls .cls-item {
    width: 160rpx;
    height: 180rpx;
    border-bottom: 1px solid #ddd;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.cat-cls .cls-item image {
    width: 100rpx;
    height: 60rpx;
}

.cat-cls .cls-item text {
    font-size: 24rpx;
    color: #333;
    line-height: 50rpx;
}

.cat-cls .cls-item.item-cur text {
    color: #f41c24;
}

.cat-cls .cls-item.item-cur .line {
    width: 8rpx;
    height: 100rpx;
    background-color: #f41c24;
    position: absolute;
    right: 0rpx;
}

.cat-goods {
    width: 590rpx;
    height: 100%;
    background-color: #fff;
    min-height: 100%;
    float: left;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.cat-goods .goods-item {
    width: 100%;
    overflow: hidden;
}

.cat-goods .goods-item .item {
    width: 255rpx;
    margin-left: 20rpx;
    float: left;
    padding-top: 30rpx;
}

.cat-goods .goods-item .item image {
    width: 255rpx;
    height: 255rpx;
}

.cat-goods .goods-item .item .item-title {
    font-size: 22rpx;
    color: #666;
    margin-top: 15rpx;
    line-height: 35rpx;
}

.cat-goods .goods-item .item .item-money {
    font-size: 26rpx;
    color: #333;
}

.cat-goods .goods-item .item .item-money text {
    color: #ccc;
    font-size: 22rpx;
    padding: 0 4rpx;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.goods-load {
    width: 100%;
    padding-bottom: 30rpx;
    margin-top: 30rpx;
    position: relative;
    text-align: center;
    height: 60rpx;
}

.goods-load .load-line {
    width: 60%;
    margin: auto;
    height: 30rpx;
    border-bottom: 1px solid #dddddd;
}

.goods-load .load-text {
    color: #999;
    font-size: 24rpx;
    line-height: 60rpx;
    background-color: #fff;
    position: absolute;
    top: 0;
    padding: 0 20rpx;
    transform: translateX(-50%);
    left: 50%;
}