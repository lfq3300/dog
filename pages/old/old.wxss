page {
    background-color: #f4f4f4;
}

image {
    display: block;
}

.page-section {
    width: 100%;
}

.page-section image {
    width: 100%;
}

.sec-banner {
    width: 100%;
    padding: 20rpx 0;
    position: relative;
    background: #fff;
}

.sec-banner swiper {
    width: 100%;
    height: 420rpx;
}

.sec-banner swiper swiper-item {
    padding: 0 10rpx;
    box-sizing: border-box;
}

.sec-banner swiper .banner-pic {
    width: 100%;
    height: 340rpx;
    border-radius: 15rpx;
    overflow: hidden;
}

.sec-banner swiper .banner-pic image {
    width: 100%;
    min-height: 100%;
}

.sec-banner .banner-name {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    padding-bottom: 30rpx;
}

.sec-banner .left-box {
    position: absolute;
    left: -40rpx;
    top: -10rpx;
    border: 20rpx #f5f5f5 solid;
    border-left: none;
    height: 360rpx;
    width: 80rpx;
    box-sizing: border-box;
    z-index: 10;
    display: none;
}

.sec-banner .right-box {
    position: absolute;
    right: -40rpx;
    top: -10rpx;
    border: 20rpx #f5f5f5 solid;
    border-right: none;
    height: 360rpx;
    width: 80rpx;
    box-sizing: border-box;
    z-index: 10;
    display: none;
}

.sec-video-bg {
    background: #fff;
    padding-bottom: 80rpx;
}

.sec-video {
    width: 100%;
}

.sec-video video {
    width: 690rpx;
    height: 390rpx;
    margin: auto;
    display: block;
}

.view-btn {
    padding: 0rpx 0 150rpx 0;
}

.sec-button {
    width: 660rpx;
    height: 140rpx;
    border-radius: 70rpx;
    background: linear-gradient(to bottom,#fd5967,#e40e22);
    margin: auto;
    color: #fff;
    font-weight: bold;
    font-size: 42rpx;
    text-align: center;
    padding-top: 20rpx;
    box-sizing: border-box;
    display: block;
}

.sec-button text {
    color: #fbd9db;
    font-size: 26rpx;
    font-weight: normal;
    display: block;
}

.view-zs {
    padding: 0rpx 0 90rpx 0;
}

.view-zs navigator {
    width: 690rpx;
    color: #f10f3c;
    font-size: 28rpx;
    margin: auto;
    text-align: center;
    text-decoration: underline;
}