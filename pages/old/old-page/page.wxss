page {
    background-color: #f4f4f4;
}

image {
    display: block;
}

.page-section {
    width: 100%;
    margin-bottom: 20rpx;
}

.old-select {
    background: #fff;
    padding: 0 30rpx;
    overflow: hidden;
}

.old-select .select-title {
    color: #444444;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.old-select .select-item {
    width: 110%;
    overflow: hidden;
}

.old-select .select-item text {
    font-size: 26rpx;
    color: #666;
    width: 215rpx;
    float: left;
    background: #f5f5f5;
    margin-right: 24rpx;
    text-align: center;
    padding: 20rpx 0;
    border-radius: 40rpx;
    margin-bottom: 20rpx;
}

.old-select .select-item text.checked {
    color: #fff;
    background: #e60012;
}

.old-select .select-input {
    width: 100%;
    margin-top: 40rpx;
    padding-bottom: 50rpx;
}

.old-select .select-input input {
    width: 100%;
    border: 1px solid #d9d9d9;
    background: #f5f5f5;
    font-size: 26rpx;
    color: #666;
    line-height: 70rpx;
    height: 70rpx;
    text-align: center;
    border-radius: 35rpx;
}

.old-select .select-input text {
    font-size: 24rpx;
    color: #e60012;
    opacity: .4;
    text-align: center;
    display: block;
    padding-top: 15rpx;
}

.old-select .select-more {
    font-size: 26rpx;
    color: #999;
    text-align: center;
    border-top: 1px solid #d9d9d9;
    padding: 20rpx 0 30rpx 0;
}

.comment-pic {
    padding: 15rpx 30rpx;
    background: #fff;
}

.comment-pic .pic-box {
    width: 100%;
    overflow: hidden;
}

.comment-pic .pic-tips {
    font-size: 28rpx;
    color: #b2b2b2;
    height: 80rpx;
    line-height: 80rpx;
}

.upload-pic {
    width: 30%;
    height: 180rpx;
    border: 1px solid #ccc;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    margin-right: 5%;
    margin-bottom: 30rpx;
    float: left;
    position: relative;
}

.upload-pic:nth-child(3n+0) {
    margin-right: 0;
}

.upload-pic image,.upload-picbox video {
    width: 100%;
    height: 100%;
}

.remove-pic {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    width: 40rpx;
    height: 40rpx;
    background-color: rgba(0,0,0,.6);
    color: white;
    text-align: center;
    line-height: 38rpx;
    font-size: 32rpx;
    z-index: 20;
}

.upload-btn {
    width: 30%;
    height: 180rpx;
    border: 1px solid #ccc;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    float: left;
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.upload-btn image {
    width: 80rpx;
    height: 80rpx;
}

.sec-input {
    padding: 30rpx;
    background: #fff;
}

.sec-input .input-item {
    border-bottom: 1px solid #d9d9d9;
    display: flex;
    flex-direction: row;
}

.sec-input .input-item text {
    color: #666;
    font-size: 28rpx;
    width: 160rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: left;
}

.sec-input .input-item input {
    color: #333;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.sec-input .input-item picker {
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
}

.sec-input .input-item picker view {
    overflow: hidden;
    height: 90rpx;
    width: 500rpx;
}

.sec-input .input-item:last-child {
    border-bottom: none;
}

.submit {
    padding: 40rpx 30rpx;
}

.submit button {
    background: #e60012;
    border-radius: 45rpx;
    height: 90rpx;
    width: 100%;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 90rpx;
}

.submit text {
    font-size: 22rpx;
    color: #b2b2b2;
    text-align: center;
    width: 100%;
    display: block;
    padding-top: 30rpx;
}