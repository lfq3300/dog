page {
    background-color: #f4f4f4;
}

.coupon {
    width: 100%;
}

.coupon .coupon-item {
    padding: 10rpx 20rpx 0rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.coupon .coupon-item .no-data {
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 20rpx;
    color: #999;
}

.coupon .coupon-item .item {
    width: 100%;
    height: 200rpx;
    border: 1rpx solid #f41c24;
    border-radius: 10rpx;
    color: #f41c24;
    position: relative;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.coupon .coupon-item .item .item-money {
    margin-left: 20rpx;
    margin-top: 25rpx;
    float: left;
    width: 255rpx;
}

.coupon .coupon-item .item .item-money .money-code {
    font-size: 50rpx;
    font-weight: 500;
}

.coupon .coupon-item .item .item-money .money-amount {
    font-size: 116rpx;
    font-weight: 500;
}

.coupon .coupon-item .item .item-tips {
    height: 100%;
    float: left;
    margin-left: 15rpx;
}

.coupon .coupon-item .item .item-tips .tips-t {
    font-size: 32rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 60rpx;
    margin-bottom: 10rpx;
}

.coupon .coupon-item .item .item-tips .tips-tt {
    font-size: 36rpx;
    margin-top: 45rpx;
    margin-bottom: 0rpx;
}

.coupon .coupon-item .item .item-tips .tips-tt text {
    display: block;
    font-size: 26rpx;
}

.coupon .coupon-item .item .item-tips .tips-c {
    border: 1px solid #f41c24;
    font-size: 18rpx;
    padding: 0rpx 15rpx;
    line-height: 24rpx;
    display: table;
}

.coupon .coupon-item .item .item-btn {
    position: absolute;
    right: 25rpx;
    top: 35rpx;
    border-left: 1px #f41c24 dashed;
    padding-left: 25rpx;
}

.coupon .coupon-item .item .item-btn .btn {
    width: 100rpx;
    height: 100rpx;
    background-color: #f41c24;
    border-radius: 50rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 32rpx;
    text-align: center;
    margin: auto;
    padding-right: 14rpx;
    box-sizing: border-box;
    position: relative;
}

.coupon .coupon-item .item .item-btn .btn .btn-icon {
    height: 8px;
    width: 8px;
    border-width: 2px 2px 0 0;
    border-color: #fff;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    right: 12rpx;
}

.coupon .coupon-item .item .item-btn>text {
    font-size: 18rpx;
    display: block;
    margin-top: 15rpx;
}

.goods-load {
    width: 100%;
    padding-bottom: 30rpx;
    margin-top: 30rpx;
    position: relative;
    text-align: center;
    height: 60rpx;
}

.goods-load .load-line {
    width: 60%;
    margin: auto;
    height: 30rpx;
    border-bottom: 1px solid #dddddd;
}

.goods-load .load-text {
    color: #999;
    font-size: 24rpx;
    line-height: 60rpx;
    background-color: #f4f4f4;
    position: absolute;
    top: 0;
    padding: 0 20rpx;
    transform: translateX(-50%);
    left: 50%;
}