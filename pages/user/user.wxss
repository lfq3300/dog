page {
    background-color: #f4f4f4;
}

image {
    display: block;
}

.user-head {
    width: 100%;
    height: 400rpx;
}

.user-head .user-head-bg {
    position: absolute;
    width: 100%;
    height: 400rpx;
    z-index: 1;
}

.user-head .user-info {
    position: absolute;
    width: 100%;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 1;
}

.user-head .user-info .info-face {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: solid rgba(255,255,255,.5) 6rpx;
}

.user-head .user-info .info-nickname {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    font-size: 36rpx;
}

.page-section {
    width: 100%;
}

.section-group {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}

.section-group .group-item {
}

.section-group .group-item .item-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    padding: 30rpx;
    position: relative;
}

.section-group .group-item .item-title>image {
    width: 38rpx;
    margin-right: 15rpx;
}

.section-group .group-item .item-title .icon {
    height: 8px;
    width: 8px;
    border-width: 3px 3px 0 0;
    border-color: #c7c7cc;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: absolute;
    right: 30rpx;
    top: 40rpx;
}

.section-group .group-item .item-btns {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
    display: flex;
    flex-direction: row;
    padding: 30rpx 0;
    border-top: 1px solid #e8e8e8;
}

.section-group .group-item .item-btns .btn {
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.section-group .group-item .item-btns .btn text {
    padding-top: 5rpx;
    line-height: 40rpx;
}

.section-group .group-item .item-btns image {
    width: 50rpx;
    height: 38rpx;
}

.section-group .bottom-line {
    border-bottom: 1px solid #e8e8e8;
}

.page-msg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: rgba(0,0,0,.5);
    z-index: 10;
}

.page-msg .msg-box {
    width: 500rpx;
    background: #fff;
    border-radius: 10rpx;
}

.page-msg .msg-box .box-text {
    font-size: 32rpx;
    color: #999;
    padding: 35rpx;
}

.page-msg .msg-box .btns {
    display: flex;
    flex-direction: row;
    width: 100%;
}

.page-msg .msg-box .btns text {
    border-top: 1px solid #ccc;
    width: 50%;
    text-align: center;
    line-height: 90rpx;
    font-size: 35rpx;
    color: #666;
}

.page-msg .msg-box .btns .open_setting {
    border-right: 1px solid #ccc;
}