page {
    background-color: #f4f4f4;
}

image {
    display: block;
}

.page-section {
    width: 100%;
}

.page-section .section-ul {
    width: 100%;
}

.page-section .section-ul .section-li {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
    padding-top: 30rpx;
}

.page-section .section-ul .section-li .li-h {
    font-size: 28rpx;
    color: #333;
    display: flex;
    flex-direction: row;
    padding: 0 30rpx;
}

.page-section .section-ul .section-li .li-h view {
    width: 100%;
    line-height: 50rpx;
}

.page-section .section-ul .section-li .li-h view.tel {
    text-align: right;
}

.page-section .section-ul .section-li .li-address {
    padding: 0 30rpx;
    padding-top: 10rpx;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #e8e8e8;
    font-size: 28rpx;
    color: #333;
}

.page-section .section-ul .section-li .li-panel {
    padding: 0 30rpx;
    font-size: 24rpx;
    color: #999;
    overflow: hidden;
}

.page-section .section-ul .section-li .li-panel .panel-checkbox {
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    float: left;
}

.page-section .section-ul .section-li .li-panel .panel-checkbox checkbox {
    transform: scale(0.8);
}

.page-section .section-ul .section-li .li-panel .panel-btns {
    float: right;
    display: flex;
    flex-direction: row;
}

.page-section .section-ul .section-li .li-panel .panel-btns view {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    margin-left: 20rpx;
}

.page-section .section-ul .section-li .li-panel .panel-btns image {
    width: 30rpx;
    margin-right: 8rpx;
}