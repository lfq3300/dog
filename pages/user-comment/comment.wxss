page {
    background-color: #f4f4f4;
}

.page-section {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.page-section .item-info {
    padding: 30rpx;
    font-size: 28rpx;
    color: #333;
    position: relative;
    display: flex;
    flex-direction: row;
}

.page-section .item-info image {
    width: 180rpx;
    height: 180rpx;
    display: block;
}

.page-section .item-info .info-goods {
    width: 100%;
    padding-right: 20rpx;
    padding-left: 20rpx;
}

.page-section .item-info .info-goods .goods-name {
    line-height: 40rpx;
    margin-bottom: 10rpx;
}

.page-section .item-info .info-goods .goods-money {
    font-size: 32rpx;
    color: #666;
}

.page-section .item-info .info-goods .btn-comment {
    display: inline-block;
    padding: 0 30rpx;
    height: 40rpx;
    border-radius: 10rpx;
    line-height: 40rpx;
    text-align: center;
    border: 1px solid #f41c24;
    color: #f41c24;
    margin-top: 10rpx;
}

.page-section .item-info .info-number {
    font-size: 26rpx;
    color: #bbb;
}

.page-section .comment-title {
    padding: 0 30rpx;
    font-size: 28rpx;
    color: #666;
    height: 90rpx;
    line-height: 90rpx;
}

.page-section .comment-content {
    padding: 0 30rpx;
}

.page-section .comment-content textarea {
    background-color: #f8f8f8;
    width: 100%;
    height: 250rpx;
    padding: 10rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #666;
}

.comment-pic {
    padding: 0 30rpx;
}

.comment-pic .pic-box {
    width: 100%;
    overflow: hidden;
    border-top: 1px solid #e8e8e8;
    margin-top: 30rpx;
}

.comment-pic .pic-tips {
    font-size: 24rpx;
    color: #b2b2b2;
    height: 80rpx;
    line-height: 80rpx;
}

.upload-pic {
    width: 30%;
    height: 180rpx;
    border: 1px solid #ccc;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    margin-right: 5%;
    margin-top: 30rpx;
    float: left;
    position: relative;
}

.upload-pic:nth-child(3n+0) {
    margin-right: 0;
}

.upload-pic image,.upload-picbox video {
    width: 100%;
    height: 100%;
}

.remove-pic {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background-color: red;
    color: white;
    text-align: center;
    line-height: 38rpx;
    font-size: 32rpx;
    z-index: 20;
}

.upload-btn {
    width: 30%;
    height: 180rpx;
    border: 1px dashed #ccc;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    margin-top: 30rpx;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
}

.upload-btn image {
    width: 80rpx;
    height: 80rpx;
}

.page-submit {
    margin: 0 30rpx;
    margin-top: 50rpx;
}