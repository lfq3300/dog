page {
    background-color: #f4f4f4;
}

.coupon-tab {
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    border-bottom: 1px solid #e8e8e8;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5;
}

.coupon-tab view {
    width: 100%;
    text-align: center;
    height: 90rpx;
    line-height: 88rpx;
}

.coupon-tab view text {
    border-bottom: 2rpx solid #fff;
    font-size: 30rpx;
    color: #666;
}

.coupon-tab view.tab-select text {
    color: #f41c24;
    display: inline-block;
    box-sizing: border-box;
    border-bottom: 2rpx solid #f41c24;
}

.coupon {
    width: 100%;
    margin-top: 120rpx;
}

.coupon .coupon-item {
    padding: 10rpx 20rpx 0rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.coupon .coupon-item .no-data {
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 20rpx;
    color: #999;
}

.coupon .coupon-item .item {
    width: 100%;
    height: 200rpx;
    border: 1rpx solid #f41c24;
    border-radius: 10rpx;
    color: #f41c24;
    position: relative;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.coupon .coupon-item .item .item-money {
    margin-left: 20rpx;
    margin-top: 25rpx;
    float: left;
    width: 255rpx;
}

.coupon .coupon-item .item .item-money .money-code {
    font-size: 50rpx;
    font-weight: 500;
}

.coupon .coupon-item .item .item-money .money-amount {
    font-size: 116rpx;
    font-weight: 500;
}

.coupon .coupon-item .item .item-tips {
    height: 100%;
    float: left;
    margin-left: 15rpx;
}

.coupon .coupon-item .item .item-tips .tips-t {
    font-size: 32rpx;
    margin-top: 60rpx;
    margin-bottom: 10rpx;
}

.coupon .coupon-item .item .item-tips .tips-tt {
    font-size: 36rpx;
    margin-top: 45rpx;
    margin-bottom: 0rpx;
}

.coupon .coupon-item .item .item-tips .tips-tt text {
    display: block;
    font-size: 26rpx;
}

.coupon .coupon-item .item .item-tips .tips-c {
    border: 1px solid #f41c24;
    font-size: 18rpx;
    padding: 0rpx 15rpx;
    line-height: 24rpx;
    display: table;
}

.coupon .coupon-item .item .item-btn {
    position: absolute;
    right: 25rpx;
    top: 35rpx;
    border-left: 1px #f41c24 dashed;
    padding-left: 25rpx;
}

.coupon .coupon-item .item .item-btn .btn {
    width: 100rpx;
    height: 100rpx;
    background-color: #f41c24;
    border-radius: 50rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 32rpx;
    text-align: center;
    margin: auto;
    box-sizing: border-box;
    position: relative;
}

.coupon .coupon-item .item .item-btn>text {
    font-size: 18rpx;
    display: block;
    margin-top: 15rpx;
}

.coupon .coupon-item .coupon_ysx {
    border: 1rpx solid #cdcbcb;
    color: #cdcbcb;
}

.coupon .coupon-item .coupon_ysx .item-tips .tips-c {
    border: 1px solid #cdcbcb;
}

.coupon .coupon-item .coupon_ysx .item-btn {
    border-left: 1px #cdcbcb dashed;
}

.coupon .coupon-item .coupon_ysx .item-btn .btn {
    background-color: #cdcbcb;
}

.coupon-code {
    width: 100%;
    border-bottom: 1px solid #e8e8e8;
    border-top: 1px solid #e8e8e8;
    padding: 15rpx 40rpx;
    box-sizing: border-box;
    position: relative;
    background-color: #fff;
}

.coupon-code input {
    width: 450rpx;
    font-size: 28rpx;
    color: #999;
    height: 60rpx;
    line-height: 60rpx;
}

.coupon-code button {
    background-color: #999;
    text-align: center;
    line-height: 50rpx;
    height: 50rpx;
    color: #fff;
    font-size: 28rpx;
    position: absolute;
    top: 20rpx;
    right: 40rpx;
    border-radius: 10rpx;
    z-index: 5;
}

.coupon-code .submit_red {
    background-color: #f41c24;
}

.goods-load {
    width: 100%;
    padding-bottom: 30rpx;
    margin-top: 30rpx;
    position: relative;
    text-align: center;
    height: 60rpx;
}

.goods-load .load-line {
    width: 60%;
    margin: auto;
    height: 30rpx;
    border-bottom: 1px solid #dddddd;
}

.goods-load .load-text {
    color: #999;
    font-size: 24rpx;
    line-height: 60rpx;
    background-color: #f4f4f4;
    position: absolute;
    top: 0;
    padding: 0 20rpx;
    transform: translateX(-50%);
    left: 50%;
}